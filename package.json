{
  "name": "altcoin-charter",
  "version": "1.5.0",
  "description": "Charts the histories of user saved cryptocurrencies",
  "main": "server.js",
  "homepage": "https://github.com/LoTerence/altcoin-charter",
  "engines": {
    "node": "20.11.1",
    "npm": "10.5.0"
  },
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client-build": "npm install --prefix client && npm run build --prefix client",
    "test": "jest --runInBand ./server/tests"
  },
  "author": "Terence Lo",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^6.3.0",
    "jest": "^27.3.1",
    "mongodb-memory-server": "^8.0.0",
    "nodemon": "^2.0.22"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cors": "2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.0.2",
    "mongoose-findorcreate": "^4.0.0",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^8.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}